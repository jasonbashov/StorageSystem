@model AAS.Web.Areas.CompanyManagment.Models.Sale.SaleDetailsViewModel
@{
    ViewBag.Title = "Sale Details";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Sale Id: @Model.Id</h3>
    </div>
    <div class="panel-body">
        <strong>Date of current sale:</strong> @Html.DisplayFor(s => s.DateOfSale)
        <br />
        <strong>Client Name:</strong> @Html.DisplayFor(s => s.Client.Name) @*@Model.Client.Name*@
        <br />
        <strong>Client Address:</strong> @Html.DisplayFor(s => s.Client.Adress) @*@Model.Client.Adress*@
        <br />
        <strong>Client Bulstat:</strong> @Html.DisplayFor(s => s.Client.Bulstat) @*@Model.Client.Bulstat*@
        <br />
        <div class="jumbotron">

            @Html.DisplayFor(m => m.SoldStocks)
            
            <strong>Sale's Total Cost: </strong> @Html.DisplayFor(m => Model.TotalCost)
        </div>
    </div>
</div>