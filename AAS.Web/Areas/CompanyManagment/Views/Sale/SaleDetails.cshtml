@model AAS.Web.Areas.CompanyManagment.Models.Sale.SaleDetailsViewModel
@{
    ViewBag.Title = "Sale Details";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Sale Id: @Model.Id</h3>
    </div>
    <div class="panel-body">
        <strong>Date of current sale:</strong> @Model.DateOfSale
        <br />
        <strong>Client Name:</strong> @Model.Client.Name
        <br />
        <strong>Client Address:</strong> @Model.Client.Adress
        <br />
        <strong>Client Bulstat:</strong> @Model.Client.Bulstat
        <br />
        <div class="jumbotron">
            @foreach (var soldStock in Model.SoldStocks)
            {
                <strong>Stock Name: </strong>@soldStock.Name
                <strong> | Single Unit Price: </strong>@soldStock.SingleUnitPrice
                <strong> | Quantity Sold: </strong>@soldStock.QuantitySold
                <strong> | Total: </strong>@soldStock.SumPrice
                <br />
            }
            <strong>Sale's Total Cost: </strong> @Model.TotalCost
        </div>
    </div>
</div>