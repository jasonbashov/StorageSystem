@model AAS.Web.Models.CompanyInputModel

<h2>Create New Company</h2>

@using (Html.BeginForm("CreateNewCompany", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.LabelFor(m => Model.Name)
    @Html.TextBoxFor(m => Model.Name)
    <br />
    @Html.LabelFor(m => Model.Adress)
    @Html.TextBoxFor(m => Model.Adress)
    <br />
    @Html.LabelFor(m => Model.Bulstat)
    @Html.TextBoxFor(m => Model.Bulstat)
    <br />
    @Html.LabelFor(m => Model.AccountablePerson)
    @Html.TextBoxFor(m => Model.AccountablePerson)
    <br />
    @Html.LabelFor(m => Model.ImgUrl)
    @Html.TextBoxFor(m => Model.ImgUrl)
    <br />
    //@Html.EditorForModel()
    <input type="submit" value="Create"  />    
    //or this way:
