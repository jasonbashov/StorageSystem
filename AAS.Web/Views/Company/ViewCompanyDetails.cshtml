@model AAS.Web.Models.Company.CompanyDetailsViewModel
@{
    ViewBag.Title = "ViewCompanyDetails";
}

<h2>Company @Model.Name Details</h2>

@if (Model.Owner.UserId == ViewBag.UserId)
{
    @Html.ActionLink("Manage", "ManageMyCompany", "Company", new { area = "CompanyManagment", id = Model.Id }, new { @class = "btn btn-default" });
}

<div class="row">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h3>
                    Name: @Model.Name
                </h3>
                <h4>
                    Accountable Person: @Model.AccountablePerson
                </h4>
                <h5>
                    Address: @Model.Adress
                </h5>
            </div>
            <div class="col-md-6">
                <img src="@Model.ImgUrl" alt="Company logo" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <h2>KendoUIGrid with stocks comes here...</h2>
</div>

