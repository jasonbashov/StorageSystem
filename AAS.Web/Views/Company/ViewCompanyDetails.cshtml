@model AAS.Models.Company
@{
    ViewBag.Title = "ViewCompanyDetails";
}

<h2>Company @Model.Name Details</h2>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h3>
                Name: @Model.Name
            </h3>
            <h4>
                Owner: @Model.Owner.FullName
            </h4>
            <h5>
                Address: @Model.Adress
            </h5>
        </div>
        <div class="col-md-6">
            <img src="@Model.ImgUrl" alt="Company logo" />
        </div>
    </div>
</div>

