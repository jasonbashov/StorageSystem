@model AAS.Web.Models.HomeStatsView
@{
    ViewBag.Title = "Home Page";
}


@{
    if (TempData["Success"] != null)
    {
        <h3>@TempData["Success"]</h3>
    }

    if (TempData["Error"] != null)
    {
        <h3>@TempData["Error"]</h3>
    }
}

<div class="container text-center">
    <div class="row">
        <h1>Welcome to</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/img/logo.png" alt="Site logo" />
        </div>
    </div>
</div>

<div class="row text-center">
    <div class="col-md-6">
        <ul class="list-group">
            <li class="list-group-item">
                <span class="badge">@Model.RegCompanies</span>
                Registered Companies
            </li>
            <li class="list-group-item">
                <span class="badge">@Model.RegClients</span>
                Registered Clients
            </li>
            <li class="list-group-item">
                <span class="badge">@Model.NumberOfSales</span>
                Number of sales
            </li>
        </ul>
    </div>
</div>